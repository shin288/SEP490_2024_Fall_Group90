<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NumberButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="NumberPadButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- Kích thước nút -->
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>

        <!-- Nền nút với viền -->
        <item name="android:background">@drawable/number_pad_background</item> <!-- Nền của nút -->
        <item name="backgroundTint">@null</item>


        <!-- Khoảng cách giữa các nút -->
        <item name="android:layout_margin">8dp</item>

        <!-- Kích thước và màu chữ -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>

        <!-- Font chữ -->
        <item name="android:fontFamily">sans-serif-medium</item>


    </style>

    <style name="PinNumberPadButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/bg_pin_button</item> <!-- Nền của nút -->
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item> <!-- Màu chữ trắng -->
        <item name="android:textSize">20sp</item> <!-- Kích thước chữ -->
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">12dp</item> <!-- Tăng khoảng cách giữa các nút -->
    </style>

    <style name="CustomPresetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/rounded_button_preset_background</item>
        <item name="android:textColor">@color/blue_background</item>
    </style>

    <style name="ContinueButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_continue_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="PresetButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_button_purple_background</item>
    </style>







</resources>
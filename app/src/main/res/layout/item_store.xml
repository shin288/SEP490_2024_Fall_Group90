<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_white_card"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- Store Name -->
    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Store Address -->
    <TextView
        android:id="@+id/tv_store_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 Main Street"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="8dp" />

    <!-- Image Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Large Image -->
        <ImageView
            android:id="@+id/iv_store_large_image"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_store_small_image_1"
            android:src="@drawable/placeholder_image" />

        <!-- Small Image 1 -->
        <ImageView
            android:id="@+id/iv_store_small_image_1"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/iv_store_large_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/placeholder_image" />

        <!-- Small Image 2 -->
        <ImageView
            android:id="@+id/iv_store_small_image_2"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toEndOf="@id/iv_store_large_image"
            app:layout_constraintTop_toBottomOf="@id/iv_store_small_image_1"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/placeholder_image" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

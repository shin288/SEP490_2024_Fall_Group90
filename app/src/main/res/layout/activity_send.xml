<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C60ED">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:src="@drawable/ic_back_arrow"
            app:tint="#FFFFFF"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:gravity="center" />
    </LinearLayout>

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the number of Send"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Amount Display -->
    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 đ"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_instruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Preset Amounts -->
    <HorizontalScrollView
        android:id="@+id/preset_amounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <Button
                android:id="@+id/btn_1000"
                style="@style/PresetButtonStyle"
                android:layout_marginEnd="16dp"
                android:text="1000 đ" />

            <Button
                android:id="@+id/btn_5000"
                style="@style/PresetButtonStyle"
                android:layout_marginEnd="16dp"
                android:text="5000 đ"
                 />

            <Button
                android:id="@+id/btn_10000"
                style="@style/PresetButtonStyle"
                android:layout_marginEnd="16dp"
                android:text="10000 đ"
                 />

            <Button
                android:id="@+id/btn_20000"
                style="@style/PresetButtonStyle"
                android:text="20000 đ" />

            <Button
                android:id="@+id/btn_50000"
                style="@style/PresetButtonStyle"
                android:text="50000 đ" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Number Pad Fragment -->

    <LinearLayout
        android:id="@+id/number_pad_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/preset_amounts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        >

        <!-- Number Pad Fragment -->
        <FrameLayout
            android:id="@+id/number_pad_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp" />

        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"

            android:layout_margin="16dp"
            style="@style/ContinueButtonStyle"
            android:text="Continue"
            android:enabled="false" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
